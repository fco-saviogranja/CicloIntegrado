# Configuração Backend - Ciclo Integrado
# Copie este arquivo para .env e preencha os valores

# Google Cloud
GCP_PROJECT_ID=ciclo-integrado
GCP_REGION=us-central1

# JWT
JWT_SECRET=sua-chave-jwt-super-secreta-aqui-minimo-32-caracteres

# Environment
NODE_ENV=development
API_URL=http://localhost:3000

# Firestore
FIRESTORE_DATABASE=ciclo-integrado

# Autenticação
SESSION_TIMEOUT=86400  # 24 horas em segundos

# Logging
LOG_LEVEL=info

# Limites de Taxa
RATE_LIMIT_WINDOW=900000  # 15 minutos em ms
RATE_LIMIT_MAX_REQUESTS=100

# Email (para notificações)
SENDGRID_API_KEY=
SENDER_EMAIL=noreply@ciclo-integrado.com

# Bucket de Storage
GCS_BUCKET=ciclo-integrado-uploads

# Features
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_EXPORTS=true
